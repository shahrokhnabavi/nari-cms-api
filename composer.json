{
  "name": "shahrokh/site-api",
  "description": "Nari CMS api center, all api endpoints to manage content management system are collected here",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Shahrokh",
      "email": "shahorkhnabavi@gmail.com"
    }
  ],
  "version": "0.1.0",
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "SiteApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "ext-gettext": "*",
    "ext-mbstring": "*",
    "league/container": "^3.3",
    "slim/psr7": "^0.5.0",
    "slim/slim": "4.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "squizlabs/php_codesniffer": "^3.4",
    "zircote/swagger-php": "^3.0"
  },
  "config": {
    "platform": {
      "php": "7.2"
    },
    "sort-packages": true
  }
}
